{% extends "base.html.twig" %}

{% block body %}
    <h1>Ajout d'un chantier</h1>
    
    {{form_start(form)}}
    
        {{form_label(form.Nom)}} 
        {{form_widget(form.Nom)}}

        {{form_label(form.Adresse)}} 
        {{form_widget(form.Adresse)}}

        {{form_label(form.Date_de_debut)}} 
        {{form_widget(form.Date_de_debut)}}
         
        <div class="form-group">
            <button type="submit" class="btn btn-success" name="enregistrer">Enregistrer</button>
        </div>   
    {{form_end(form)}} 
    
    <button class="btn_back"><a href="{{ path('chantiers') }}">Retour</a></button>
{% endblock %}