{% extends "base.html.twig" %}

{% block title %}{{ controller_name }}{% endblock %}



{% block body %}
    <h1>Tout nos chantiers</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if chantiers %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                
                {% for chantier in chantiers %}
                <tr>
                    <td>{{chantier.Nom}}</td>
                    <td><a href="{{ path("show_chantier", {"id": chantier.id})}}">Voir</a></td>   
                </tr>
            
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>Aucun chantier en cours...</h2>
    {% endif %}
   
    <button class="btn"><a href="{{ path("add_chantier")}}">Ajouter un chantier</a></button>
        
           
{% endblock %}