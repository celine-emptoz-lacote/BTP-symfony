{% extends "base.html.twig" %}
{% block title %}{{ controller_name }}{% endblock %}


    


{% block body %}

    <h1>Ajout d'un pointage</h1>
    {% if infos is defined %}
        {{ infos }}
    {% endif %}
   
   
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.date_debut)}}
            {{ form_widget(form.date_debut)}}
        </div> 
      
     
         <div class="form-group">
            {{ form_label(form.chantiers)}}
            {{ form_widget(form.chantiers)}}
        </div>
        <div class="form-group">
            {{ form_label(form.utilisateurs)}}
            {{ form_widget(form.utilisateurs)}}
        </div>
     
     <div class="form-group">
            <button type="submit" class="btn btn-success" name="enregistrer">Enregistrer</button>
        </div>

    {{ form_end(form) }} 

   
   

    
    
{% endblock %}